<div class="container">
  <h2 class="text-center">Artists</h2>

  <ul class="list-group">
  <% @artists.each do |artist| %>
     <li class="list-group-item justify-content-between">
       <%=link_to artist.name, artist_path(artist.id)%>
       <span class="badge badge-default badge-pill"><%= artist.songs.count %></span>
    </li>
  <% end %>
</div>
