<div class="container">
  <div class="text-center">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 list-group artist-list">
        <%= image_tag(@artist.image, class: "img-rounded img-responsive") %>
      </div>
    </div>
    <div>
      <h2><%= @artist.name %></h2>
      <h4><%= @artist.artist_type %></h4>
      <button class="btn btn-xs btn-grey">
        <%= link_to "Delete Artist", artist_path, class: "dark-text", method: :delete, data: { confirm: "Are you sure?" } %>
      </button>
    </div>
  </div>

  <div class="row">
    <p class="light-text"> List of songs: </p>
      <ul class="list-group">
        <% @songs.each do |song| %>
          <li class="list-group-item" id="song-<%= song.id %>">
            <div class="row">
              <div class="col-xs-1">
                <%= song.year %>
              </div>
              <div class="col-xs-10">
                <%= song.title %>
              </div>
              <div class="col-xs-1">
                <button class="btn btn-xs btn-grey pull-right">
                  <span class="glyphicon glyphicon-remove delete-song"></span>
                </button>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
  </div>

  <%= render "songs/form", :artist => @artist %>

</div>
